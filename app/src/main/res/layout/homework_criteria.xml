<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hmwk_arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/hmwk_criteria_tv"
        app:layout_constraintStart_toEndOf="@+id/hmwk_criteria_tv"
        app:layout_constraintTop_toTopOf="@+id/hmwk_criteria_tv"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:paddingTop="24dp"/>

    <TextView
        android:id="@+id/hmwk_criteria_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>